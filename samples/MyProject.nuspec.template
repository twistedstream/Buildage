<!-- 
Template .nuspec file used by the Package.targets Buildage script 
to generate a final .nuspec file to be used by 'NuGet.exe pack'.
-->
<?xml version="1.0"?>
<package>
  <metadata>
    <!-- dynamic: csproj file -->
    <!-- change tokens to actual values if not using with a .csproj -->
    <id>$id$</id>
    <title>$title$</title>
    <description>$description$</description>

    <!-- dynamic: injected by Buildage -->
    <version></version>
    <copyright></copyright>
    
    <!-- static -->
    <authors>ex: GitHub username</authors>
    <licenseUrl>http://myproject/license</licenseUrl>
    <projectUrl>http://myproject</projectUrl>
    <iconUrl>http://myproject/icon.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <tags>Tag1 Tag2</tags>
    <releaseNotes>MyProject release notes.</releaseNotes>	
  </metadata>
</package>